#!/bin/bash

$(git rev-parse --show-toplevel)/terminal/dev-scripts/install-dependencies
$(git rev-parse --show-toplevel)/terminal/dev-scripts/copy-source-files
$(git rev-parse --show-toplevel)/terminal/dev-scripts/bind-hotkey

tmux kill-server
xterm tmux

echo "Please restart terminal to apply changes."
echo "You should run 'tmux kill-server' if you have started tmux."
